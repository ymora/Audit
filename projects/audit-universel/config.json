{
  "name": "audit-universel",
  "description": "Système d'audit universel",
  "type": "python",
  "version": "2.0.0",
  "test_patterns": [
    "test_*.py",
    "*_test.py",
    "tests/"
  ],
  "ignore_patterns": [
    "__pycache__/",
    "*.pyc",
    "venv/",
    ".venv/",
    "node_modules/",
    "dist/",
    "build/",
    "*.log",
    "temp_*",
    "logs/",
    ".git/",
    "reports/"
  ],
  "quality_tools": [
    "pylint",
    "flake8",
    "black"
  ],
  "security_tools": [
    "bandit",
    "safety"
  ],
  "coverage_tool": "coverage",
  "specific_tests": [
    "test_audit_system",
    "test_gui_interface",
    "test_code_analysis",
    "test_security_checker"
  ],
  "project_structure": {
    "core": ["audit_gui.py", "audit.py", "init_audit.py"],
    "tools": ["code_analyzer.py", "security_checker.py"],
    "tests": ["generic/", "run_tests.py"],
    "scripts": ["debug/", "cleanup_old_audit.py"],
    "docs": ["README.md", "TESTS_ARCHITECTURE.md"]
  },
  "main_components": {
    "entry_point": "audit.py",
    "gui_interface": "core/audit_gui.py",
    "audit_engine": "core/audit.py",
    "test_framework": "tests/generic/"
  },
  "dependencies": {
    "required": ["tkinter", "asyncio", "pathlib"],
    "optional": ["requests", "json", "logging"]
  },
  "features": [
    "Interface graphique moderne",
    "Détection automatique de projets",
    "Tests spécifiques par projet",
    "Framework de tests réutilisable",
    "Rapports détaillés HTML/JSON",
    "Support multi-langages"
  ]
}
